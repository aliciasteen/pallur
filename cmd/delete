#!bin/bash -e

# Delete project

cmd_desc() {
  echo "Delete project"
}

help() {
  echo "usage: ${CMD} ${SUBCOMMAND_NAME} <options>"
  echo ""
  echo "create (-n|--name) string (-r|--repository) string [(-V|--version)] [(-h|--hostname) value]";
  echo ""
  echo "Options:";
  echo "    -n    Name of Project. Required.";
  echo "    -c    URL of Application Repository. Required.";
  echo "    -r    Route for the project. If not provided will be automatically generated.";
  echo "    -h    Print this help"
  exit 1;
}

shift $(($OPTIND -1))
SUBCOMMAND_OPT="${1:-help}"

# Only shift if there are other parameters
if [ $# -ge 1 ]; then
    shift
fi

case ${SUBCOMMAND_OPT} in
    "cmd_desc"|"help")
        ${SUBCOMMAND_OPT} "$@"
        ;;
    -h)
      help
      exit 1
      ;;
    *)
        echo "Invalid parameter(s) or option(s)."
        help
        exit 1
        ;;
esac
